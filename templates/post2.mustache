
{{! Print an anchor if the post is the first unread post of the discussion. }}
{{# isfirstunread}}
    <a id="unread"></a>
{{/ isfirstunread}}

{{! Print the anchor to the post. }}
<a id="p{{ postid }}"></a>

{{! Start the post. Mark it read or unread. }}
<div class="moodleoverflowpost clearfix{{ postclass }}{{# isfirstpost}} firstpost starter{{/isfirstpost}}" role="region" aria-label="{{ discussionby }}">

    <div>

        {{! Display the header only for the first post. }}
        {{#isfirstpost}}
        <div class="row header clearfix">

            {{! User picture. }}
            <div class="left picture">
                {{{ picture }}}
            </div>

            {{! Begin the topic column. }}
            <div class="topic firstpost starter">

                {{! The subject. }}
                <div class="subject" role="heading" aria-level="2">
                    {{ subject }}
                </div>

                {{! The author and date. }}
                <div class="author" role="heading", aria-level="2">
                    {{{ bytext }}}
                </div>

            </div>
            {{! End of the topic column. }}

        </div>
        {{/isfirstpost}}
        {{! End of the header row. }}

        {{! Row with the post content. }}
        <div class="row maincontent clearfix">

            {{! The author. }}
            <div class="left">

                <div class="votes">
                    {{! Did the current user upvoted this post? }}
                    {{#userupvoted}}
                        {{# pix}} vote/upvoted, moodleoverflow {{/ pix}}
                    {{/userupvoted}}
                    {{^userupvoted}}
                        <a href="{{{ upvotelink }}}">
                            {{# pix}} vote/up, moodleoverflow {{/ pix}}
                        </a>
                    {{/userupvoted}}

                    {{! Display the amount of votes. }}
                    <p>{{ votes }}</p>

                    {{! Did the current user upvoted this post? }}
                    {{#userdownvoted}}
                        {{# pix}} vote/downvoted, moodleoverflow {{/ pix}}
                    {{/userdownvoted}}
                    {{^userdownvoted}}
                        <a href="{{{ downvotelink }}}">
                            {{# pix}} vote/down, moodleoverflow {{/ pix}}
                        </a>
                    {{/userdownvoted}}
                </div>
            </div>

            {{! The message of the post. }}
            <div class="no-overflow">
                <div class="content">
                    <div class="posting fullpost">
                        {{{ postcontent }}}
                    </div>
                </div>
            </div>

        </div>
        {{! End of the post content row. }}


        <div class="row side">
            <div class="left">
                &nbsp;
            </div>

            {{! The commands. }}
            <div class="options clearfix">

                {{! Display the authortext here, if the post is an answer or comment. }}
                {{^isfirstpost}}
                    <div class="moodleoverflow-post-rating">
                        {{{ bytext }}}
                    </div>
                {{/isfirstpost}}

                {{! Display the avaible options here. }}
                <div class="commands">
                    {{{ commands }}}
                </div>
            </div>

            {{! TODO: Link to post if required. }}

            {{! Print the footer if requested. }}
            {{# footer }}
                <div class="footer">
                    {{ footer }}
                </div>
            {{/footer}}

        </div>
    </div>


</div>