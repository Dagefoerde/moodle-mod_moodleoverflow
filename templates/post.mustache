
{{! Print an anchor if the post is the first unread post of the discussion. }}
{{# isfirstunread}}
    <a id="unread"></a>
{{/ isfirstunread}}

{{! Print the anchor to the post. }}
<a id="p{{ postid }}"></a>

{{! Start the post. Mark it read or unread. }}
<div class="moodleoverflowpost clearfix{{ postclass }}{{# isfirstpost}} firstpost starter{{/isfirstpost}}" role="region" aria-label="{{ discussionby }}">
    <div class="row header clearfix">

        {{! User picture. }}
        <div class="left picture">{{{ picture }}}</div>

        {{! Begin the topic column. }}
        <div class="topic{{# isfirstpost}} firstpost starter{{/isfirstpost}}">

            {{! The subject. }}
            <div class="subject" role="heading" aria-level="2">
                {{ subject }}
            </div>

            {{! The author and date. }}
            <div class="author" role="heading", aria-level="2">
                {{{ bytext }}}
            </div>

        </div>
        {{! End of the topic column. }}

    </div>
    {{! End of the header row. }}

    {{! Row with the post content. }}
    <div class="row maincontent clearfix">

        {{! The author. }}
        <div class="left">
            <div class="grouppictures">
                &nbsp;
            </div>
        </div>

        {{! The message of the post. }}
        <div class="no-overflow">
            <div class="content">
                <div class="posting fullpost">
                    {{{ postcontent }}}
                </div>
            </div>
        </div>

    </div>
    {{! End of the post content row. }}


    <div class="row side">
        <div class="left">
            &nbsp;
        </div>

        {{! The commands. }}
        <div class="options clearfix">
            <div class="commands">
                {{{ commands }}}
            </div>
        </div>

        {{! TODO: Link to post if required. }}

        {{! Print the footer if requested. }}
        {{# footer }}
            <div class="footer">
                {{ footer }}
            </div>
        {{/footer}}

    </div>
</div>