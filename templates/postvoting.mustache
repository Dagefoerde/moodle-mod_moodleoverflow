{{!
  @template mod_moodleoverflow/postvoting

  Moodleoverflow postvoting template.
  The purpose of this template is to render the vote-section for questions and answers.
}}

{{! Did the current user upvoted this post? }}
{{#userupvoted}}
{{! Can the user change the vote? }}
    {{#canchange}}
        <a href="{{{ removeupvotelink }}}">
            {{# pix}} vote/upvoted, moodleoverflow {{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/upvotedfinal, moodleoverflow {{/ pix}}
    {{/canchange}}
{{/userupvoted}}
{{^userupvoted}}
    {{#canchange}}
        <a href="{{{ upvotelink }}}">
            {{# pix}} vote/upvote, moodleoverflow {{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/upvote, moodleoverflow {{/ pix}}
    {{/canchange}}
{{/userupvoted}}

{{! Display the amount of votes. }}
<p>{{ votes }}</p>

{{! Did the current user upvoted this post? }}
{{#userdownvoted}}
{{! Can the user change its vote? }}
    {{#canchange}}
        <a href="{{{ removedownvotelink }}}">
            {{# pix}} vote/downvoted, moodleoverflow {{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/downvotedfinal, moodleoverflow {{/ pix}}
    {{/canchange}}
{{/userdownvoted}}
{{^userdownvoted}}
    {{#canchange}}
        <a href="{{{ downvotelink }}}">
            {{# pix}} vote/downvote, moodleoverflow {{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/downvote, moodleoverflow {{/ pix}}
    {{/canchange}}
{{/userdownvoted}}